extends layout

block content
	.container
		h1 Register Page
		p.lead Please register on our site.
		br
		form(role='form', action='/register', method='post', style='max-width: 300px;')
			.form-group
				input.form-control(type='text', name='username', placeholder='Enter Your Username')
			.form-group
				input.form-control(type='password', name='password', placeholder='Enter Your Password')
			button.btn.btn-primary(type='submit') Submit
			a(href='/')
				button.btn.btn-danger(type='button') Cancel


